<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>
<body id="page-top">
  <!-- Nav Bar-->
  <%- include('./partials/nav-bar') %>
  <!-- Contacto-->
  <section class="page-section section-form" id="contact">
      <br></br>
    <div class="container">
        <br></br>
      <div class="text-center">
        <h2 class="section-heading text-uppercase">Contactanos</h2>
        <h3 class="section-subheading text-muted">Dejanos tu mensaje o consulta y en breve estaremos contestando.</h3>
      </div>
      <form id="contactForm" method="POST" action="/contacto">
        <div class="row align-items-stretch mb-5">
          <div class="col-md-6">
            <div class="form-group">
              <!-- Name input-->
              <input class="form-control" id="name" type="text" placeholder="Coloque aqui su nombre *"
                 name="name"/>
            </div>
            <div class="form-group">
              <!-- Email address input-->
              <input class="form-control" id="email" type="email" placeholder="Coloque aqui su E-mail *"
                 name="email"/>
            </div>
            <div class="form-group mb-md-0">
              <!-- Phone number input-->
              <input class="form-control" id="phone" type="tel" placeholder="Coloque aqui su numero de telefono *"
                name="phone"/>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group form-group-textarea mb-md-0">
              <!-- Message input-->
              <textarea class="form-control" id="message" placeholder="Coloque aqui su mensaje *"
                name="consulta"></textarea>
            </div>
          </div>
        </div>
        <!-- Submit Button-->
        <div class="text-center" ><button class="btn btn-primary btn-xl text-uppercase" id="submitButton" style="background-color:var(--color-strong-letter) "
            type="submit">Enviar Mensaje</button></div>
      </form>
    </div>
  </section>
  <!-- Footer-->
  <%- include('./partials/footer') %>
  <%- include('./partials/wsap') %>
  <!-- Bootstrap core JS-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Core theme JS-->
  <script src="javascripts/scripts.js"></script>
  <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
</body>
</html>